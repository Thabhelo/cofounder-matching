{
  "permissions": {
    "allow": [
      "Bash(npm run build*)",
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm run typecheck*)",
      "Bash(npm test*)",
      "Bash(npm run format*)",
      "Bash(npm run dev*)",
      "Bash(pytest*)",
      "Bash(mypy*)",
      "Bash(ruff*)",
      "Bash(uvicorn*)",
      "Bash(alembic upgrade head*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(ls*)",
      "Bash(find*)",
      "Bash(grep*)",
      "Bash(docker-compose up*)",
      "Bash(docker-compose down*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format 2>/dev/null || npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || black \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
